.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40px;
}

.polar-bear {
  width: 150px;
  height: 150px;
  margin-bottom: 15px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

.stats-container {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 30px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 32px;
  font-weight: bold;
  color: #65B7E2;
  margin-bottom: 5px;
}

.stat-label {
  font-size: 14px;
  color: #666;
}

.island-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
}

.subtitle {
  font-size: 18px;
  color: #333;
  margin-bottom: 15px;
}

.island-image {
  width: 80%;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}