.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #65B7E2;
  margin-bottom: 15px;
}

.subtitle {
  font-size: 18px;
  color: #666;
  margin-bottom: 10px;
}

.snow-image {
  width: 100%;
  margin: 15px 0;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.content {
  font-size: 16px;
  color: #444;
  line-height: 1.6;
  text-indent: 2em;
  margin-bottom: 15px;
}