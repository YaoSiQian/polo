.container {
  padding: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding: 15px;
  font-size: 16px;
  font-weight: bold;
  color: #65B7E2;
  text-align: right;
}

.product-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.product-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.product-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.product-name {
  font-size: 28rpx;
}