.container {
  padding: 30rpx;
}

.product-image {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.product-info {
  display: flex;
  flex-direction: column;
  margin-bottom: 50rpx;
}

.product-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.product-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.product-price {
  font-size: 32rpx;
  color: #e64340;
  margin-bottom: 20rpx;
}

.current-points {
  font-size: 28rpx;
  color: #888;
}

.purchase-btn {
  margin-top: 50rpx;
  background-color: #65B7E2;
  color: white;
}

.level-requirement {
  display: block;
  margin-top: 10px;
  color: #ff4d4f;
  font-size: 14px;
}